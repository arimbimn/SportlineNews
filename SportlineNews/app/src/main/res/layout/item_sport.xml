<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_imgSport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/item_tglPub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="Tanggal Publikasi"/>

    <TextView
        android:id="@+id/item_judulBerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Judul Berita"/>

    <TextView
        android:id="@+id/item_penerbitBerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Penerbit Berita"/>

    <TextView
        android:id="@+id/item_descBerita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Berita"/>

</LinearLayout>